{% extends 'base.jinja2' %}
{% block body %}
    <div class='map-container'>
        <div id='map'>
            <span class='reticle bold red h3'>o</span>
        </div>
    </div>

    <div class='content'>

        <header class='pvx container'>
            <a href='/' class='fc'>
                <img class='display-inline' src='/static/img/logo.svg' />
                <h1 class='display-inline title'>Seamergency!!!</h1>
            </a>
        </header>

        <section id='summary fc'>
            <div class='fi'>
                <p>In the last year, near <span class='uppercase bold neighborhood'>
                    <span class='lat'>{{lat}}</span>, 
                    <span class='lon'>{{lon}}</span></span>.</p>
            </div>
            <ul class='fi hanging'>
                <li>Crime has <span class='bold crime'>{{percentages.crime|safe}}</span></li>
                <li>Fires have <span class='bold fire'>{{percentages.fire|safe}}</span></li>
                <li>Incidents have <span class='bold accidents'>{{percentages.mvi|safe}}</span></li>
            </ul>
        </section>

        <section id='visualization'>
            <!-- <h2>Visualize</h2> -->
            <div class='graph'></div>
        </section>

