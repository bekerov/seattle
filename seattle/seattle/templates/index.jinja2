{% extends 'base.jinja2' %}
{% block body %}

<script>var bulk_data = {{output}}</script>

<nav class='container center'>
    <p><a href='/'>Seattle</a></p>
</nav>

<div class='map-container'>
    <div id='map'>
        <span class='reticle bold red h3'>o</span>
    </div>
</div>

<div class='summary align-center pal'>
    <p>How <span class='uppercase bold neighborhood'>{{lat}}, {{lon}}</span> has changed <span>in the last year.</span></p>
    <ul class='hanging'>
        <li>Crime has <span class='crime'>{{percentages.crime|safe}}</span></li>
        <li>Fires have <span class='fire'>{{percentages.fire|safe}}</span></li>
        <li>Accidents have <span class='accidents'>{{percentages.mvi|safe}}</span></li>
    </ul>
</div>

<div class='visualization container center'>

    <div class='graph'></div>

</div>

<script type='text/javascript' src='/static/js/map.js'></script>
{% endblock %}
